<Window x:Class="PStorage.View.LoginWindow"    
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PStorage"
        mc:Ignorable="d"
        Title="MainWindow" Height="171" Width="278">
    <Grid  Background="LightBlue">
        <Grid Height="135" Width="258">
            <TextBox x:Name="tb_Login" Margin="126,25,12,84" TextWrapping="Wrap"/>
            <PasswordBox x:Name="tb_Password" Margin="126,56,12,53"/>
            <Label Content="Username" Margin="22,25,147,84"/>
            <Label Content="Password" Margin="22,56,147,0" VerticalAlignment="Top"/>
            <Button x:Name="tbOk" Content="Ок"  Height="21" Margin="22,101,147,13" Click="TbOk_Click"/>
            <Button x:Name="tbExit" Content="Выход" Height="21" Margin="157,101,12,13" Click="TbExit_Click"/>
            <Label x:Name="lb_message" Content=""  Height="25" Margin="50,0,12,110" Width="196" Foreground="#FF8736E8" FontSize="11"/>
        </Grid>
    </Grid>
</Window>
